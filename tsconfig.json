{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./dist",
    "target": "ES5",
    "lib": ["es2017"],
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": ".",
    "paths": {
      "configs": ["configs"],
      "app": ["app"]
    },
    "plugins": [
      { "transform": "ts-transformer-keys/transformer" }
    ]
  },

  "compileOnSave": true,
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
